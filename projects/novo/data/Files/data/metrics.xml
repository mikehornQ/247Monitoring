<?xml version="1.0" encoding="utf-8"?>
<groups>
  <group>
    <groupname>Windows 8 computers</groupname>
	<category>
	  <categoryname>Memory</categoryname>
      <instance>
	    <instancename></instancename>
        <counters>
          <counter>
		    <countername>Available KBytes</countername>
            <operator>GT</operator>
            <threshold>7500000</threshold>
          </counter>
        </counters>
      </instance>
    </category>
    <category>
  	  <categoryname>Process</categoryname>
      <instance>
	    <instancename>System</instancename>        
        <counters>
          <counter>
  		    <countername>% Processor Time</countername>
            <operator>GT</operator>
            <threshold>60</threshold>
          </counter>
		  <counter>
  		    <countername>% User Time</countername>
            <operator>GT</operator>
            <threshold>40</threshold>
          </counter>
        </counters>
      </instance>
    </category>    
  </group>
  <group>
    <groupname>ePP Metrics</groupname>
    <category>
	  <categoryname>ePP Metrics</categoryname>      
      <instance>
	    <instancename>ePP Metrics</instancename>
        <counters>
          <counter>
		    <countername>Transaction Response Time</countername>            
            <operator>GT</operator>
            <threshold>6000</threshold>
          </counter>
        </counters>
      </instance>
    </category>
  </group>
</groups>
